<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/darkBlue2"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/mask">
        <color android:color="@color/kite_black" />
    </item>
    <item>
        <selector>
            <item android:drawable="@color/blue3" android:state_activated="true" />
            <item android:state_pressed="true" android:drawable="@color/blue3" />
            <item android:state_enabled="false" android:drawable="@color/darkBlue1" />
            <item android:state_enabled="true" android:drawable="@color/darkBlue2" />
            <item android:drawable="@android:color/transparent" />
        </selector>
    </item>
</ripple>
